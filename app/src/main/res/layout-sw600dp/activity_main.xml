<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn1"
        android:layout_width="@dimen/btn_size_width_sw"
        android:layout_height="@dimen/btn_size_height_sw"
        android:layout_marginTop="272dp"
        android:inputType="text"
        android:onClick="performClick"
        android:text="Increament"
        android:textSize="@dimen/btn_size_text_sw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="@dimen/btn_size_width_sw"
        android:layout_height="@dimen/btn_size_height_sw"
        android:layout_marginTop="568dp"
        android:inputType="text"
        android:onClick="performClick"
        android:text="Show_value"
        android:textSize="@dimen/btn_size_text_sw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>